{
  "private": true,
  "name": "butterchoco.my.id",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "start": "sirv build --port 3000 --cors --single --host",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest --coverage"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "jest": "^24.9.0",
    "jest-junit": "^12.1.0",
    "jest-preset-preact": "^1.0.0",
    "preact-cli": "^3.0.0",
    "sirv-cli": "1.0.3"
  },
  "dependencies": {
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!coverage/**",
      "!node_modules/**",
      "!src/index.js",
      "!src/sw.js",
      "!server/tests/**",
      "!server/server.js",
      "!tests/**",
      "!public/**",
      "!build/**"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
